<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="product_datasheet_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">product.datasheet.res.config.settings.view.form.inherit.web.calendar</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="86"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" string="Product Datasheet" data-key="product_datasheet">
                        <h2>Product Datasheet</h2>
                        <div class="row mt16 o_settings_container" name="qualification_setting_container">
                            <div class="col-12 col-lg-12 o_setting_box" id="product_datasheet">
                                <label for="regulation_footer"/>
                                <field name="regulation_footer"/>
                                <label for="text_footer"/>
                                <field name="text_footer"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

         <record id="action_product_datasheet_config_settings" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'product_datasheet', 'bin_size': False}</field>
        </record>

        <menuitem
            id="menu_product_datasheet_general_settings"
            name="Product Datasheet Settings"
            parent="base.menu_administration"
            sequence="1"
            action="action_product_datasheet_config_settings"
            groups="base.group_system"/>

        <record model="ir.ui.view" id="product_datasheet.list">
            <field name="name">Product Datasheet List</field>
            <field name="model">product.datasheet.info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="field_id"/>
                    <field name="value"/>
                    <field name="active"/>
                    <field name="product_id"/>
                    <field name="group_id"/>
                </tree>
            </field>
        </record>

        <!-- form view of model -->
        <record id="product_datasheet_view_info_form" model="ir.ui.view">
            <field name="name">Product Datasheet Info</field>
            <field name="model">product.datasheet.info</field>
            <field name="arch" type="xml">
                <form string="Product Datasheet Info">
                    <group>
                        <field name="field_id"/>
                        <field name="value"/>
                        <field name="value_display" invisible="1"/>
                        <field name="uom"/>
                        <field name="section_id"/>
                        <field name="group_id"/>
                        <field name="timestamp" invisible="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="product_datasheet_view_info_search" model="ir.ui.view">
            <field name="name">Product Datasheet Search</field>
            <field name="model">product.datasheet.info</field>
            <field name="arch" type="xml">
                <search string="Product Datasheet Info">
                    <field name="product_id"/>
                    <field name="section_id"/>
                    <field name="group_id"/>
                    <separator/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="product_datasheet_view_section_list">
            <field name="name">Product Datasheet Section</field>
            <field name="model">product.datasheet.section</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="group_ids"/>
                    <field name="timestamp"/>
                    <field name="export"/>
                </tree>
            </field>
        </record>

        <record id="product_datasheet_view_section_form" model="ir.ui.view">
            <field name="name">Product Datasheet Section</field>
            <field name="model">product.datasheet.section</field>
            <field name="arch" type="xml">
                <form string="Product Datasheet Section">
                    <group string="Section">
                        <field name="code"/>
                        <field name="name"/>
                        <field name="timestamp"/>
                        <field name="export"/>
                    </group>
                    <notebook>
                        <page string="Groups" name="groups">
                            <group>
                                <field name="group_ids" options="{'no_open': True}" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="timestamp"/>
                                        <field name="export"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="product_datasheet_view_fields_list">
            <field name="name">Product Datasheet Fields</field>
            <field name="model">product.datasheet.field</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="uom"/>
                    <field name="export"/>
                </tree>
            </field>
        </record>

        <record id="product_datasheet_view_fields_form" model="ir.ui.view">
            <field name="name">Product Datasheet Fields</field>
            <field name="model">product.datasheet.field</field>
            <field name="arch" type="xml">
                <form string="Product Datasheet Fields">
                    <group string="Field">
                        <field name="code"/>
                        <field name="name"/>
                        <field name="type"/>
                        <field name="uom"/>
                        <field name="export"/>
                    </group>
                    <notebook>
                        <page string="Usage">
                            <field name="info_ids" nolabel="1">
                                <tree create="0">
                                    <field name="field_id"/>
                                    <field name="product_id"/>
                                    <field name="section_id"/>
                                    <field name="group_id"/>
                                    <field name="timestamp"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </form>
                <!--
                <xpath expr="//tree" position="attributes">
                    <attribute name="editable"/>
                </xpath>
                -->
            </field>
        </record>

        <!-- form view of model -->
        <record id="product_datasheet_view_group_form" model="ir.ui.view">
            <field name="name">Product Datasheet Group</field>
            <field name="model">product.datasheet.group</field>
            <field name="arch" type="xml">
                <form string="Product Datasheet Group">
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="section_id"/>
                        <field name="export"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_server_duplicate_product" model="ir.actions.server">
            <field name="name">Duplicate Product</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_product_product"/>
            <field name="binding_model_id" ref="model_product_product"/>
            <field name="state">code</field>
            <field name="code">
                for record in records:
                    record.duplicate_product()
            </field>
        </record>

        <record id="action_server_change_sequence_datasheet_product" model="ir.actions.server">
            <field name="name">Change Sequence Datasheet</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_product_product"/>
            <field name="binding_model_id" ref="model_product_product"/>
            <field name="state">code</field>
            <field name="code">
                for record in records:
                    record.change_sequence_datasheet()
            </field>
        </record>

        <record id="product_datasheet_tab" model="ir.ui.view">
            <field name="name">product.product.datasheet</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="download_xlsx" type="object" class="btn btn-primary btn-sm o_list_button_add"
                            string="Download Excel" invisible="0"/>
                    <button name="read_xlsx" type="object" class="btn btn-primary btn-sm o_list_button_add"
                            string="Read Excel" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='general_information']" position="before">
                    <page string="Datasheet" name="datasheet">
                        <group>
                            <field string="Countries" name="country_ids" widget="many2many_tags"/>
                            <field string="Note" name="datasheet_note"/>
                        </group>
                        <group string="Filters">
                            <field string="Field" name="filter_field"/>
                            <field string="Section" name="filter_section"/>
                            <field string="Group" name="filter_group"/>
                        </group>
                        <notebook>
                            <page string="Data" name="data">
                                <group>
                                    <field name="info_ids" nolabel="1"
                                           context="{'default_info_ids': active_id, 'default_active': True}">
                                        <tree class="tree_datasheet_info">
                                            <field name='sequence' widget='handle'/>
                                            <field name="section_id"/>
                                            <field name="group_name" string="Group"/>
                                            <field name="field_id" style="width:20% !important"/>
                                            <field name="value_display" string="Value" style="width:30% !important"/>
                                            <field name="uom"/>
                                            <field name="timestamp"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Images" name="image">
                                <group>
                                    <field name="image_ids" nolabel="1">
                                        <tree>
                                            <field name='section_id'/>
                                            <field name="image"/>
                                        </tree>
                                        <form>
                                            <group>
                                                <field name='section_id'/>
                                                <field name="image"/>
                                            </group>
                                        </form>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </page>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="product_datasheet.product_action_window">
            <field name="name">Products</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="product_datasheet.section_action_window">
            <field name="name">Product Datasheet Section</field>
            <field name="res_model">product.datasheet.section</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="product_datasheet.group_action_window">
            <field name="name">Product Datasheet Group</field>
            <field name="res_model">product.datasheet.group</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="product_datasheet.field_action_window">
            <field name="name">Product Datasheet Field</field>
            <field name="res_model">product.datasheet.field</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="product_datasheet.info_action_window">
            <field name="name">Product Datasheet Info</field>
            <field name="res_model">product.datasheet.info</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- menu categories -->
        <menuitem name="Datasheets" id="product_datasheet.menu"
                  groups="product_datasheet.group_product_datasheet_manager,product_datasheet.group_product_datasheet_user"/>

        <menuitem name="Products" id="product_datasheet.product_list" parent="product_datasheet.menu"
                  action="product_datasheet.product_action_window" sequence="10"/>

        <menuitem name="Config" parent="product_datasheet.menu" id="product_datasheet.menu_config" sequence="20"/>

        <!-- actions -->
        <menuitem name="Sections" id="product_datasheet.menu_sections_list" parent="product_datasheet.menu_config"
                  action="product_datasheet.section_action_window"/>

        <menuitem name="Fields" id="product_datasheet.menu_sales_fields_list" parent="product_datasheet.menu_config"
                  action="product_datasheet.field_action_window"/>

        <menuitem name="Info" id="product_datasheet.menu_info_list" parent="product_datasheet.menu_config"
                  action="product_datasheet.info_action_window"/>

    </data>
</odoo>
