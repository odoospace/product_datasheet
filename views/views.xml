<odoo>
    <data>

        <record model="ir.ui.view" id="product_datasheet.list">
            <field name="name">Product Datasheet List</field>
            <field name="model">product.datasheet.info</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="field_id"/>
                    <field name="value"/>
                    <field name="active"/>
                    <field name="product_id"/>
                    <field name="group_id"/>
                </tree>
            </field>
        </record>

        <!-- form view of model -->
        <record id="product_datasheet_view_info_form" model="ir.ui.view">
            <field name="name">Product Datasheet Info</field>
            <field name="model">product.datasheet.info</field>
            <field name="arch" type="xml">
                <form string="Product Datasheet Info">
                    <group>
                        <field name="field_id"/>
                        <field name="value"/>
                        <field name="active"/>
                        <field name="product_id"/>
                        <field name="group_id"/>
                        <field name="section_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="product_datasheet_view_section_form" model="ir.ui.view">
            <field name="name">Product Datasheet Section</field>
            <field name="model">product.datasheet.section</field>
            <field name="arch" type="xml">
                <form string="Product Datasheet Section">
                    <notebook>
                        <page string="Groups" name="groups">
                            <group>
                                <field name="group_ids" options="{'no_open': True}" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="active"/>
                                        <field name="timestamp"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <!-- form view of model -->
        <record id="product_datasheet_view_group_form" model="ir.ui.view">
            <field name="name">Product Datasheet Group</field>
            <field name="model">product.datasheet.group</field>
            <field name="arch" type="xml">
                <form string="Product Datasheet Group">
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="section_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="product_datasheet_tab" model="ir.ui.view">
            <field name="name">product.datasheet</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='purchase']" position="after">
                    <page string="Datasheets" name="datasheets">
                        <group name="datasheets">
                            <!--<field name="group_ids"/>-->
                            <field name="group_ids" options="{'no_open': True}" nolabel="1">
                                <field name="code"/>
                                <tree editable="bottom">
                                    <field name="field_id"/>
                                    <field name="value"/>
                                    <field name="timestamp"/>
                                    <field name="active"/>
                                    <field name="group_id"/>
                                    <field name="section_id"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="product_datasheet.section_action_window">
            <field name="name">Product Datasheet Section </field>
            <field name="res_model">product.datasheet.section</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="product_datasheet.group_action_window">
            <field name="name">Product Datasheet Group</field>
            <field name="res_model">product.datasheet.group</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- menu categories purchases -->
        <menuitem name="Datasheets" id="product_datasheet.menu_purchases" parent="purchase.menu_purchase_config"/>
        <!-- actions -->
        <menuitem name="Sections" id="product_datasheet.menu_purchases_sections_list"
                  parent="product_datasheet.menu_purchases"
                  action="product_datasheet.section_action_window"/>

        <!-- menu categories sales -->
        <menuitem name="Datasheets" id="product_datasheet.menu_sales" parent="sale.menu_sale_config"/>
        <!-- actions -->
        <menuitem name="Sections" id="product_datasheet.menu_sales_sections_list" parent="product_datasheet.menu_sales"
                  action="product_datasheet.section_action_window"/>

    </data>
</odoo>