<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record model="ir.module.category" id="module_category_product_datasheet">
            <field name="name">Product Datasheet</field>
            <field name="description">
                Helps you manage your product datasheet
            </field>
            <field name="sequence">10</field>
        </record>

        <record id="group_product_datasheet_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="module_category_product_datasheet"/>
        </record>

        <record id="group_product_datasheet_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_product_datasheet"/>
            <field name="implied_ids" eval="[(4, ref('group_product_datasheet_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>