<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_datasheet_field_wizard_form_view" model="ir.ui.view">
        <field name="name">product.datasheet.field.wizard.form.view</field>
        <field name="model">product.datasheet.field.wizard</field>
        <field name="arch" type="xml">
            <form string="Add/Remove Field in Datasheet">
                <group string="What action do you want to take?">
                    <field name="action_type"/>
                    <field name="group_id" attrs="{'invisible': [('action_type','=', False)]}"/>
                    <field name="field_id" attrs="{'invisible': [('action_type','=', False)]}"/>
                </group>
                <group string="Where do you want to place it?" attrs="{'invisible': [('action_type','=', 'remove')]}">
                    <field name="group_after_id"
                           attrs="{'invisible': [('action_type','=', False)], 'required': [('action_type', '=', 'add')]}"/>
                    <field name="field_after_id"
                           attrs="{'invisible': [('action_type','=', False)], 'required': [('action_type', '=', 'add')]}"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_type_selected_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_product_datasheet_field_wizard" model="ir.actions.act_window">
        <field name="name">Add/Delete Field in Datasheet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.datasheet.field.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>
