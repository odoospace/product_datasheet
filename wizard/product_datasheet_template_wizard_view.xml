<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_datasheet_template_wizard_form_view" model="ir.ui.view">
        <field name="name">product.datasheet.template.wizard.form.view</field>
        <field name="model">product.datasheet.template.wizard</field>
        <field name="arch" type="xml">
            <form string="Printing assistant Excel template">
                <group>
                    <field name="template_id"/>
                </group>
                <group>
                    <field name="file_generated" readonly="1" attrs="{'invisible': [('file_generated','=', False)]}"/>
                </group>
                <footer>
                    <button string="Download Excel" type="object" name="action_download_excel" class="btn-primary"/>
                    <button string="Download Layout" type="object" name="action_download_layout" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_product_datasheet_template_wizard" domain="[]"
                name="Download Excel"
                target="new"
                res_model="product.datasheet.template.wizard"
                context="{'default_product_ids': active_ids, 'product_ids': active_ids}"
                view_mode="form"
                view_id="product_datasheet_template_wizard_form_view"/>

    <record id="action_product_datasheet_template_wizard_button" model="ir.actions.act_window">
        <field name="name">Printing assistant Excel template</field>
        <field name="res_model">product.datasheet.template.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_datasheet_template_wizard_form_view"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="context">{'default_product_ids': active_ids, 'product_ids': active_ids}</field>
    </record>

</odoo>
