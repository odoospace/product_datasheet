<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_datasheet_image_wizard_form_view" model="ir.ui.view">
        <field name="name">product.datasheet.image.wizard.form.view</field>
        <field name="model">product.datasheet.image.wizard</field>
        <field name="arch" type="xml">
            <form string="Massively Add Profile Image To Product">
                <group>
                    <field name="image"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_add_image" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_product_datasheet_image_wizard" model="ir.actions.act_window">
        <field name="name">Massively Add Profile Image To Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.datasheet.image.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_product"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>